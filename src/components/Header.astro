---
const pathname = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 mix-blend-difference">
  <nav class="flex items-center justify-between px-6 md:px-10 py-5">
    <a
      href="/"
      class="font-[family-name:var(--font-label)] text-[11px] tracking-[0.3em] uppercase text-white hover:opacity-60 transition-opacity"
    >
      Parallax Studios
    </a>
    <div class="flex items-center gap-8">
      <a
        href="/games"
        class:list={[
          'font-[family-name:var(--font-label)] text-[11px] tracking-[0.2em] uppercase transition-opacity',
          pathname.startsWith('/games') ? 'text-white' : 'text-white/50 hover:text-white',
        ]}
      >
        Index
      </a>
      <a
        href="/studio"
        class:list={[
          'font-[family-name:var(--font-label)] text-[11px] tracking-[0.2em] uppercase transition-opacity',
          pathname === '/studio' || pathname === '/studio/' ? 'text-white' : 'text-white/50 hover:text-white',
        ]}
      >
        Studio
      </a>
    </div>
  </nav>
</header>
