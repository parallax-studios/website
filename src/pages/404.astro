---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404" description="This page doesn't exist.">
  <section class="min-h-[85vh] flex flex-col justify-center px-6 md:px-10">
    <span class="font-[family-name:var(--font-label)] text-[10px] tracking-[0.35em] uppercase text-[var(--color-smoke)] mb-6">
      Error 404
    </span>
    <h1 class="font-[family-name:var(--font-headline)] text-[15vw] md:text-[10vw] font-900 italic leading-[0.85] tracking-[-0.03em] text-[var(--color-chalk)]">
      Dead<br/>Channel
    </h1>
    <p class="font-[family-name:var(--font-body)] text-lg text-[var(--color-smoke)] mt-8 max-w-md italic">
      This page has been cancelled, shelved, or moved to a different time slot.
    </p>
    <a
      href="/"
      class="mt-8 inline-block font-[family-name:var(--font-label)] text-[11px] tracking-[0.2em] uppercase text-[var(--color-chalk)] border-b border-[var(--color-chalk)] pb-0.5 hover:text-[var(--color-fog)] hover:border-[var(--color-fog)] transition-colors w-fit"
    >
      Back to broadcast
    </a>
  </section>
</BaseLayout>
