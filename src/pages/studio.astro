---
import BaseLayout from '../layouts/BaseLayout.astro';
import type { TeamMember } from '../lib/types';

const team: (TeamMember & { wound: string })[] = [
  { codename: 'REED', role: 'Game Designer', catchphrase: "What's the loop?", philosophy: 'Systems-first, loop-obsessed. Every design starts with the 30-second verb.', wound: 'Shipped a game with a broken core loop. Players refunded in 48 hours.' },
  { codename: 'NOVA', role: 'Narrative Designer', catchphrase: 'Every mechanic tells a story.', philosophy: 'Character-first, theme-driven. The world wound defines everything.', wound: 'Wrote a 40,000-word narrative bible for a game where players skipped every cutscene.' },
  { codename: 'PIXEL', role: 'Art Director', catchphrase: 'Does this read at a glance?', philosophy: 'Reference-heavy, readability-obsessed. If you can\'t screenshot it, it doesn\'t exist.', wound: 'Made a beautiful game that ran at 5 FPS because nobody budgeted for optimization.' },
  { codename: 'ECHO', role: 'Sound Designer', catchphrase: 'Audio IS game feel.', philosophy: 'Sensory and sparse. The silence between sounds matters more than the sounds.', wound: 'Composed a perfect soundtrack for a game cancelled the week before launch.' },
  { codename: 'BYTE', role: 'Lead Programmer', catchphrase: 'Profile before you optimize.', philosophy: 'Pragmatic, ships-first. The best code is the code that shipped.', wound: 'Rewrote an engine from scratch for 18 months. The game never shipped.' },
  { codename: 'GRID', role: 'Level Designer', catchphrase: 'Where does the player LOOK?', philosophy: 'Spatial thinker. Every room is a question; every path is an answer.', wound: 'Designed 50 handcrafted levels for a game that went procedural last minute.' },
  { codename: 'CLOCK', role: 'Producer', catchphrase: 'Cut scope, not corners.', philosophy: 'Scope realist. A shipped game beats a perfect design document.', wound: 'Managed a team through 6 months of crunch. Two people quit. The game was mediocre.' },
  { codename: 'CRASH', role: 'QA Lead', catchphrase: "Define 'works'.", philosophy: 'Professional skeptic. If it hasn\'t been broken, it hasn\'t been tested.', wound: 'Let a save-corruption bug ship. 1-star reviews flooded in before the hotfix landed.' },
  { codename: 'HYPE', role: 'Marketing', catchphrase: "What's the GIF?", philosophy: 'Hook-driven, audience-first. If you can\'t sell it in 5 seconds, redesign it.', wound: 'An incredible game sold 200 copies because marketing started one month before launch.' },
  { codename: 'SHIP', role: 'Release Manager', catchphrase: "What's the rollback plan?", philosophy: 'Checklist-obsessed. Hope is not a deployment strategy.', wound: 'Servers crashed, store page had wrong screenshots, review embargo broke early.' },
];

const colors = ['#e63946', '#06d6a0', '#ff006e', '#3a86ff', '#fb5607', '#7209b7', '#2ec4b6', '#e9c46a', '#f77f00', '#8338ec'];
---

<BaseLayout title="Studio" description="Meet the Parallax Studios team.">
  <!-- Hero -->
  <section class="pt-28 pb-20 px-6 md:px-10">
    <p class="font-[family-name:var(--font-label)] text-[10px] tracking-[0.35em] uppercase text-[var(--color-smoke)] mb-6">
      The Studio
    </p>
    <h1 class="font-[family-name:var(--font-headline)] text-5xl md:text-7xl lg:text-8xl font-900 italic leading-[0.88] tracking-[-0.02em] text-[var(--color-cream)] max-w-4xl mb-10">
      Every angle.<br/>Every voice.
    </h1>
    <p class="font-[family-name:var(--font-body)] text-lg text-[var(--color-fog)] leading-relaxed max-w-xl italic">
      The best game design happens when specialists with strong opinions argue productively.
      Our team of 10 named agents each brings a distinct philosophy, a signature question, and
      the scars of past projects that inform every decision.
    </p>
  </section>

  <!-- Stats row — brutalist -->
  <section class="grid grid-cols-4 border-y border-[var(--color-ash)]/40">
    <div class="p-6 md:p-8 border-r border-[var(--color-ash)]/40">
      <span class="font-[family-name:var(--font-headline)] text-3xl md:text-5xl font-700 text-[var(--color-cream)]">14</span>
      <p class="font-[family-name:var(--font-label)] text-[8px] md:text-[9px] tracking-[0.3em] uppercase text-[var(--color-smoke)] mt-2">Games</p>
    </div>
    <div class="p-6 md:p-8 border-r border-[var(--color-ash)]/40">
      <span class="font-[family-name:var(--font-headline)] text-3xl md:text-5xl font-700 text-[var(--color-cream)]">84</span>
      <p class="font-[family-name:var(--font-label)] text-[8px] md:text-[9px] tracking-[0.3em] uppercase text-[var(--color-smoke)] mt-2">Documents</p>
    </div>
    <div class="p-6 md:p-8 border-r border-[var(--color-ash)]/40">
      <span class="font-[family-name:var(--font-headline)] text-3xl md:text-5xl font-700 text-[var(--color-cream)]">700K</span>
      <p class="font-[family-name:var(--font-label)] text-[8px] md:text-[9px] tracking-[0.3em] uppercase text-[var(--color-smoke)] mt-2">Words</p>
    </div>
    <div class="p-6 md:p-8">
      <span class="font-[family-name:var(--font-headline)] text-3xl md:text-5xl font-700 text-[var(--color-cream)]">10</span>
      <p class="font-[family-name:var(--font-label)] text-[8px] md:text-[9px] tracking-[0.3em] uppercase text-[var(--color-smoke)] mt-2">Specialists</p>
    </div>
  </section>

  <!-- Team Roster -->
  <section class="px-6 md:px-10 py-24">
    <p class="font-[family-name:var(--font-label)] text-[10px] tracking-[0.35em] uppercase text-[var(--color-smoke)] mb-12">
      The Team
    </p>

    <div class="space-y-0 border-t border-[var(--color-ash)]/40">
      {team.map((member, i) => (
        <div
          class="team-stamp group grid grid-cols-1 md:grid-cols-[120px_1fr_1fr] gap-4 md:gap-8 py-8 border-b border-[var(--color-ash)]/20 hover:bg-[var(--color-slab)]/50 transition-colors px-2 md:px-4"
          data-catchphrase={`"${member.catchphrase}"`}
        >
          <div>
            <span class="font-[family-name:var(--font-headline)] text-2xl font-700 italic" style={`color: ${colors[i]};`}>
              {member.codename}
            </span>
            <p class="font-[family-name:var(--font-label)] text-[9px] tracking-[0.2em] uppercase text-[var(--color-smoke)] mt-1">
              {member.role}
            </p>
          </div>
          <p class="font-[family-name:var(--font-body)] text-sm text-[var(--color-fog)] leading-relaxed">
            {member.philosophy}
          </p>
          <p class="font-[family-name:var(--font-body)] text-sm text-[var(--color-smoke)] leading-relaxed italic">
            {member.wound}
          </p>
        </div>
      ))}
    </div>
  </section>

  <!-- Process -->
  <section class="px-6 md:px-10 py-24 border-t border-[var(--color-ash)]/40">
    <p class="font-[family-name:var(--font-label)] text-[10px] tracking-[0.35em] uppercase text-[var(--color-smoke)] mb-12">
      The Process
    </p>
    <h2 class="font-[family-name:var(--font-headline)] text-3xl md:text-5xl font-700 italic leading-[1.05] text-[var(--color-cream)] mb-16 max-w-2xl">
      From pitch to production-ready
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-px bg-[var(--color-ash)]/20">
      {[
        { num: '01', title: 'The Pitch', lead: 'REED + NOVA + HYPE', desc: 'The hook, the loop, the heart, and the market position. If it can\'t stop a scroll, it doesn\'t leave this phase.' },
        { num: '02', title: 'Game Design', lead: 'REED', desc: 'Core loops at four timescales. Mechanics with player-facing and system-facing descriptions. The essential question: what could make this unfun?' },
        { num: '03', title: 'Narrative Bible', lead: 'NOVA', desc: 'The world wound, the characters, the tone guide, and the lore hierarchy from need-to-know to never-told.' },
        { num: '04', title: 'Art, Sound & Tech', lead: 'PIXEL + ECHO + BYTE', desc: 'Visual identity. Sonic palette. Technical foundation. Three specialists, three documents, one cohesive vision.' },
      ].map(step => (
        <div class="bg-[var(--color-slab)] p-8">
          <span class="font-[family-name:var(--font-label)] text-[10px] tracking-[0.3em] uppercase text-[var(--color-smoke)] block mb-4">{step.num}</span>
          <h3 class="font-[family-name:var(--font-headline)] text-xl font-700 text-[var(--color-cream)] mb-2">{step.title}</h3>
          <p class="font-[family-name:var(--font-label)] text-[9px] tracking-[0.2em] uppercase text-[var(--color-smoke)] mb-4">{step.lead}</p>
          <p class="font-[family-name:var(--font-body)] text-sm text-[var(--color-fog)] leading-relaxed">{step.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Philosophy -->
  <section class="px-6 md:px-10 py-28 border-t border-[var(--color-ash)]/40">
    <div class="max-w-3xl">
      <h2 class="font-[family-name:var(--font-headline)] text-3xl md:text-5xl lg:text-6xl font-700 italic leading-[1.1] text-[var(--color-cream)] mb-10">
        Every game we design starts with a question nobody else is asking.
      </h2>
      <p class="font-[family-name:var(--font-body)] text-lg text-[var(--color-fog)] leading-relaxed italic">
        What if a factory had feelings? What if a Broadway show was a bet?
        What if the 2000s internet was alive again? We don't chase genres.
        We chase industries — and find the game hiding inside each one.
      </p>
    </div>
  </section>
</BaseLayout>
