---
import type { GameMeta } from '../lib/types';

interface Props {
  game: GameMeta;
}

const { game } = Astro.props;
---

<section
  class="relative pt-32 pb-20 px-6 overflow-hidden"
  style={`--game-accent: ${game.accent};`}
>
  <!-- Accent gradient background -->
  <div
    class="absolute inset-0 opacity-[0.08]"
    style={`background: radial-gradient(ellipse at 50% 0%, ${game.accent} 0%, transparent 70%);`}
  ></div>

  <div class="relative max-w-4xl mx-auto">
    <div class="flex items-center gap-3 mb-6">
      <span
        class="font-[family-name:var(--font-mono)] text-sm tracking-widest"
        style={`color: ${game.accent};`}
      >
        GAME {game.number}
      </span>
      <span class="w-8 h-px" style={`background: ${game.accent};`}></span>
      <span class="text-sm text-[var(--color-dim)] font-[family-name:var(--font-mono)]">
        {game.industry}
      </span>
    </div>

    <h1
      class="font-[family-name:var(--font-display)] text-5xl md:text-7xl font-bold tracking-tight mb-6"
      transition:name={`game-card-${game.slug}`}
    >
      {game.title}
    </h1>

    <p class="text-xl md:text-2xl font-medium mb-4" style={`color: ${game.accent};`}>
      {game.comparable}
    </p>

    <p class="text-lg text-[var(--color-muted)] leading-relaxed max-w-2xl">
      {game.elevator}
    </p>
  </div>
</section>
